html {
	margin: 0;
	padding: 0;
	width: 100%;
	height: 100%;
}

body {
	margin: 0;
	padding: 0;
	width: 100%;
	height: 100%;
	background-image: url('../img/bg01.gif');
}

.div-clear {
	clear:both;
}

.plweb-entry-Form {
	width: 720px;
	background-color: #ffffff;
	margin: 20px auto 20px auto;
	border: 1px solid #ffffff;
}

.plweb-entry-Title {
	height: 120px;
	background-image: url('../img/main_title.png');
}

.plweb-entry-Navigation {
	background-color: #000000;
}

.plweb-entry-Navigation ul {
	display: block;
	border: 1px solid black;
	list-style: none;
	margin: 0;
	padding: 0 20px;
	background-color: transparent;
}

.plweb-entry-Navigation li {
	display: inline;
	float: left;
	font-size:13px;
	background-color: transparent;
}

.plweb-entry-Navigation li span {
	
}

.plweb-entry-Navigation a {
	text-decoration: none;
	display: block;
	background-color: transparent;
	color: #eeeeee;
	font-weight: normal;
	padding: 5px 15px;
}

.plweb-entry-Left {
	float: left;
	width: 250px;
}

.plweb-entry-Content {
	margin-left: 250px;
	padding: 1em;
}

.plweb-entry-Footer {
	font-size: 13px;
	background-color: #eeeeee;
	text-align: center;
	padding: 10px;
	color: #444444;
}

.plweb-entry-Footer a {
	color: #333355;
	font-weight: bold;
}

.plweb-entry-EditBox textarea {
	width: 400px;
	height: 300px;
	font-size: 13px;
	background-color: #f5f5f5;
	border: 1px solid #aaaaaa;
	line-height: 1.4em;
}

.plweb-entry-EditBox input {
	width: 200px;
	font-size: 16px;
	background-color: #f5f5f5;
	border: 1px solid #aaaaaa;
}

.plweb-entry-FormMessage {
	margin-top: 10px;
}

.content {
	letter-spacing: 0.05em;
	line-height: 1.8em;
	color: #3a3a3a;
	font-size: 15px;
}

.content a {
	color: #0000FF;
	text-decoration: none;
}

.content p {
	letter-spacing: 0.1em;
	color: #333333;
}

.content ul {
	
}

.content li {
	padding-bottom: 5px;
}

.content h3 {
	font-size: 22px;
	color: #ff6600;
}

.form-message-ok {
	padding: 2px 10px;
	background-color: #ccffcc;
	display: block;
	text-align: center;
	color: #333333;
}
